#user_course {
    .course_content {
        .table {
            border-color: #B3E8F3;
            th {
                text-align: center;
                background-color: #F0FAFC;
                color: #313131;
                font-weight: 500;
                letter-spacing: 5px;
                font-size: 15px;
                border-color: #B3E8F3;
                border-bottom: 1px;
            }
            td {
                border-color: #B3E8F3;
                text-align: center;
                font-size: 13px;
            }
        }
        .my_course {
            width: 100%;
            display: flex;
            // flex-wrap: no-wrap;
            align-content: center;
            justify-content: space-around;
            li {
                text-align: center;
                margin: 5px;
                font-size: 12px;
                span {
                    display: block;
                    width: 30px;
                    height: 30px;
                    border-radius: 50%;
                    margin: 5px auto;
                    line-height: 30px;
                    font-size: 18px;
                    color: white;
                    &.wait_pay {
                        background-color: #ED0505;
                    }
                    &.learning {
                        background-color: #F7941D;
                    }
                    &.wait_learn {
                        background-color: #29C2E1;
                    }
                    &.learnt {
                        background-color: #7D7D7D;
                    }
                }
            }
        }
        .time {
            text-align: right;
            span {
                font-size: 18px;
                color: #EC0606;
            }
            s {
                color: #EC0606;
                font-size: 15px;
                font-style: normal;
                text-decoration: none;
            }
        }
        .btn_ft {
            float: right;
            width: 80px;
            line-height: 29px;
            text-align: center;
        }
        .list {
            .list_left {
            	 background-color: #CFCDED;
                &.spring {
                    background-color: #f3dab2;
                }
                &.summer {
                    background-color: #D5EFC3;
                }
                &.autumn {
                    background-color: #b2e8f4;
                }
                &.winter {
                    background-color: #cecded;
                }
            }
        }
    }
    @media (min-width: 769px) {
        margin-top: 50px;
        padding: 20px;
        .course_content {
            margin-left: 25%;
            .table {}
            .course_list {
                .course_title {
                    padding: 8px 10px;
                    margin: 0;
                    margin-bottom: 10px;
                    line-height: 20px;
                    background-color: #F0FAFC;
                    h5 {
                        margin: 0;
                        // font-size: 14px;
                    }
                }
                .list {
                    display: block;
                    width: 100%;
                    margin-top: 5px;
                    position: relative;
                    .list_left {
                        padding: 0;
                       
                        position: relative;
                        overflow: hidden;
                        border-radius: 5px;
                        height: 88px;
                        text-align: center;
                        margin-bottom: 8px;
                        .season {
                            position: absolute;
                            top: -5px;
                            left: -5px;
                            display: block;
                            font-size: 18px;
                            width: 30px;
                            height: 30px;
                            border-radius: 50%;
                            text-align: center;
                            line-height: 30px;
                            background-color: #fff;
                            color: #EE1110;
                        }
                        .glyphicon {
                            font-size: 40px;
                            margin-top: 10px;
                        }
                        h3 {
                            text-align: center;
                            font-size: 16px;
                            margin-top: 10px;
                        }
                    }
                    .list_right {
                        padding: 0;
                        padding-left: 10px;
                        height: 88px;
                        margin-bottom: 8px;
                        ul {
                            height: 100%;
                            display: flex;
                            flex-direction: column;
                            justify-content: space-around;
                            align-items: left;
                            li {
                                white-space: nowrap;
                                font-size: 12px;
                                overflow: hidden;
                                text-overflow: ellipsis;
                            }
                        }
                    }
                    .list_pay {
                        height: 88px;
                        margin-bottom: 8px;
                        padding: 0;
                        display: flex;
                        flex-direction: column;
                        justify-content: space-around;
                        align-items: center;
                        .time {
                            text-align: left;
                            display: inline;
                        }
                        .btn_ft {
                        	cursor: pointer;
                            height: 25px;
                            line-height: 24px;
                            text-align: center;
                            background-color: #ED0505;
                            border-radius: 5px;
                        }
                    }
                    .progress {
                        width: 100%;
                        height: 15px;
                        margin: 5px 0;
                    }
                    .complete {
                        width: 100%;
                        font-size: 12px;
                        letter-spacing: 2px;
                        padding: 0 10px;
                        .more {
                            width: 100%;
                            display: inline-block;
                            text-align: right;
                            cursor: pointer;
                        }
                        table {
                            margin-top: 8px;
                            td {
                                letter-spacing: 0;
                            }
                        }
                    }
                    .clock {
                        border-radius: 5px;
                        margin: 8px 0;
                        background-color: #F7941D;
                        color: white;
                        letter-spacing: 2px;
                        height: 22px;
                        line-height: 22px;
                    }
                    .finshed {
                        width: 75px;
                        height: 30px;
                        border: 2px solid #ED0505;
                        text-align: center;
                        line-height: 28px;
                        position: absolute;
                        transform: rotate(-30deg);
                        right: 10px;
                        top: 50px;
                        font-size: 22px;
                        color: #ED0505;
                    }
                }
            }
        }
    }
    @media (max-width: 768px) {
        margin-top: 40px;
        background-color: #f2f2f2;
        .container {
            padding: 0;
        }
        .user_info {
