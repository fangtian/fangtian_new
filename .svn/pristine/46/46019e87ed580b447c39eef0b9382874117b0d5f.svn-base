#user_center {
    @media (min-width: 769px) {
        margin-top: 100px;
        .user_info {
            width: 20%;
            height: 100%;
            float: left;
            .user_img {
                width: 100%;
                position: relative;
                img {
                    max-width: 120px;
                    margin: 0 auto;
                }
                h3,
                h5 {
                    text-align: center;
                }
                .score {
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    background-color: #EC9324;
                    text-align: center;
                    color: white;
                    font-size: 12px;
                    position: absolute;
                    top: 90px;
                    left: 60%;
                    .num {
                        display: block;
                        margin-bottom: -3px;
                        font-size: 18px;
                    }
                }
            }
            .user_nav {
                margin-top: 15px;
                padding-left: 15px;
                font-size: 16px;
                li {
                    margin: 10px;
                    margin-top: -1px;
                    background-color: #f2f2f2;
                    padding: 10px;
                    &:hover {
                        border-color: red;
                    }
                    span {
                        display: inline-block;
                        padding-right: 15px;
                        border-right: 2px solid #4FC5DF;
                        margin-right: 10px;
                    }
                }
            }
        }
        .user_content {
            margin-left: 20%;
            select {
                display: block;
                margin: 10px auto;
                height: 35px;
                line-height: 35px;
                border-radius: 5px;
                background-color: #54C3E1;
                color: white;
                font-size: 16px;
                letter-spacing: 2px;
                padding: 0 5px;
            }
            .exam {
                margin: 5px 0;
                padding: 10px;
                h4 {
                    span {
                        font-size: 22px;
                    }
                }
                .user_exam {
                    padding: 20px 0;
                    border-bottom: 1px solid #888;
                    .content {
                        .exam_subject {
                            margin: 10px 0;
                            font-size: 16px;
                            p {
                                line-height: 26px;
                            }
                        }
                        .exam_img {
                            img {
                                display: block;
                                margin: 0 auto;
                            }
                        }
                        .options {
                            .exam_option {
                                margin: 10px 0;
                                button {
                                    border: none;
                                    background-color: white;
                                    font-size: 15px;
                                    &:active,
                                    &:hover,
                                    &:focus {
                                        background-color: white;
                                        border: none;
                                        outline: none;
                                        box-shadow: none;
                                    }
                                    &:hover,
                                    &.checked {
                                        color: #EFA346;
                                    }
                                }
                            }
                        }
                        .btn_ft {
                            display: block;
                            background-color: #ED9324;
                            width: 120px;
                            margin: 0 auto;
                            border-style: none;
                            font-size: 16px;
                            letter-spacing: 3px;
                            &:active,
                            &:hover,
                            &:focus {
                                background-color: #ED9324;
                                border: none;
                                outline: none;
                                box-shadow: none;
                            }
                        }
                    }
                }
                .user_score {
                    min-height: 120px;
                    margin: 15px 0;
                    .result {
                        position: relative;
                        min-height: 60px;
                        .wrap,
                        .circle,
                        .percent {
                            position: absolute;
                            width: 60px;
                            height: 60px;
                            border-radius: 50%;
                        }
                        .wrap {
                            top: 0;
                            left: 20px;
                            background-color: #fff;
                        }
                        .circle {
                            box-sizing: border-box;
                            border: 10px solid #fff;
                            clip: rect(0, 60px, 60px, 30px);
                        }
                        .clip-auto {
                            clip: rect(auto, auto, auto, auto);
                        }
                        .percent {
                            box-sizing: border-box;
                            top: -10px;
                            left: -10px;
                        }
                        .left {
                            transition: transform ease;
                            border: 10px solid #54C3F9;
                            clip: rect(0, 30px, 60px, 0);
                        }
                        .right {
                            border: 10px solid #54C3F9;
                            clip: rect(0, 60px, 60px, 30px);
                        }
                        .wth0 {
                            width: 0;
                        }
                        .num {
                            position: absolute;
                            box-sizing: border-box;
                            width: 40px;
                            height: 40px;
                            line-height: 40px;
                            text-align: center;
                            font-size: 12px;
                            left: 10px;
                            top: 10px;
                            border-radius: 50%;
                            background-color: #fff;
                            z-index: 1;
                        }
                    }
                    .user_result {
                        margin-top: 40px;
                        margin-left: 100px;
                        display: flex;
                        justify-content: space-around;
                        text-align: center;
                        font-size: 16px;
                        span {
                            display: block;
                            margin-top: 10px;
                            font-size: 24px;
                            color: #ED9324;
                        }
                    }
                }
                .user_analyse {
                    margin: 20px 0;
                    .content {
                        margin: 0 -15px;
                        text-align: center;
                        #main {
                            width: 50%;
                            height: 320px;
                            float: left;
                            #canvas1 {
                                width: 100%;
                                height: 280px;
                            }
                        }
                        #detail {
                            width: 50%;
                            height: 320px;
                            float: right;
                            #canvas2 {
                                padding-top: 20px;
                                width: 100%;
                                height: 280px;
                            }
                        }
                    }
                }
            }
        }
    }
    @media (max-width: 768px) {
        margin-top: 50px;
        .user_info {
            margin: 0 -15px;
            overflow: hidden;
            position: relative;
            .user_img {
                background-color: #8B6484;
                padding: 25px 10px;
                img {
                    float: left;
                    width: 70px;
                }
                h3,
                h5 {
                    padding-left: 85px;
                    margin-top: 10px;
                    color: white;
                }
                h3 {
                    letter-spacing: 3px;
                }
                h5 {
                    margin-bottom: 0;
                }
            }
            .score {
                width: 100px;
                border-radius: 30px 0 0 30px;
                position: absolute;
                right: -20px;
                top: 60px;
                background-color: #ED9324;
                height: 30px;
                line-height: 30px;
                padding-left: 20px;
                color: white;
                margin-top: -15px;
                .num {
                    font-size: 20px;
                    margin-right: 5px;
                }
            }
        }
        .user_nav {
            margin-top: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid #333;
            display: flex;
            justify-content: center;
            li {
                flex-grow: 1;
                text-align: center;
                a {
                    display: inline-block;
                    span {
                        font-size: 30px;
                        display: block;
                        margin: 5px;
                    }
                }
            }
            .main,
            .message,
            .data {
                display: none;
            }
        }
        .user_content {
            select {
                margin: 10px auto;
                height: 30px;
                line-height: 30px;
                background-color: #54C3E1;
                color: white;
                font-size: 16px;
                letter-spacing: 2px;
                display: block;
            }
            .exam {
                .user_exam {
                    .content {
                        .exam_subject {}
                        .exam_img {}
                        .options {
                            .exam_option {
                                .btn {
                                    background-color: white;
                                    border: 1px solid #B7B7B7;
                                    margin: 2px 0;
                                    &:active,
                                    &:hover,
                                    &:focus {
                                        background-color: white;
                                        border: none;
                                        outline: none;
                                        box-shadow: none;
                                    }
                                    &:hover,
                                    &.checked {
                                        color: #EFA346;
                                        border-color: #EFA346;
                                    }
                                }
                                .checked {
                                    background-color: white;
                                }
                            }
                        }
                        .btn_ft {
                            display: block;
                            background-color: #ED9324;
                            width: 100px;
                            margin:10px auto;
                            border-style: none;
                            font-size: 16px;
                            letter-spacing: 3px;
                            &:active,
                            &:hover,
                            &:focus {
                                background-color: #ED9324;
                                border: none;
                                outline: none;
                                box-shadow: none;
                            }
                        }
                    }
                }
                .user_score {
                    margin: 0 -15px;
                    h4 {
                        border-bottom: 1px solid #e1e1e1;
                        padding-bottom: 10px;
                        padding-left: 15px;
                    }
                    .content {
                        width: 100%;
                        text-align: center;
                    }
                    .result {
                        background-color: #F7F7F7;
                        padding: 10px;
                        margin-top: 10px;
                        .user_result {
                            width: 70%;
                            span,
                            h4 {
                                color: #ED9324;
                                border: none;
                                padding: 0;
                            }
                        }
                    }
                }
                .user_analyse {}
            }
        }
    }
}
