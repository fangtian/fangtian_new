#homepage {
    width: 100%;
    .fp-tableCell {
        /* height: calc( 100vh - 40px)!important; */
        display: flex;
        .container {
            height: 100%;
        }
    }
    .swiper-container {
        width: 100%;
        height: 100%;
        .swiper-slide {
            background-position: center;
            background-size: cover;
        }
        .swiper-pagination {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            z-index: 9;
            span {
                margin: 20px;
            }
        }
    }
    .course {
        .num {
            margin: 0 10px;
            font-size: 50px;
            font-family: ftFont;
            color: #F7941D;
        }
        .course_head {
            ul {
                margin-top: 30px;
                display: flex;
                align-items: center;
                justify-content: space-around;
                li {
                    text-align: center;
                    span {
                        display: block;
                        width: 80px;
                        height: 80px;
                        line-height: 80px;
                        text-align: center;
                        font-size: 50px;
                        border-radius: 50%;
                        background-color: #ED9324;
                        color: white;
                        margin-bottom: 25px;
                    }
                }
            }
        }
        .content {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            .list {
                text-align: center;
                background-color: white;
                overflow: hidden;
                margin: 0;
                .statu {
                    &.hot {
                        background-color: #f0ad4e;
                    }
                    &.danger {
                        background-color: #d9534f;
                    }
                    &.full {
                        background-color: #919494;
                    }
                }
            }
        }
    }
    .teacher {
        .container {
            overflow: hidden;
        }
    }
    @media (min-width: 769px) {
        .course {
            background-color: #E7EFEF;
            .course_head {
                padding-top: 50px;
                width: 100%;
                height: 40vh;
                .course_title {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                }
            }
            .content {
                height: 60vh;
                display: flex;
                justify-content: space-around;
                align-items: center;
                .list {
                    height: 50vh;
                    width: 28%;
                    text-align: center;
                    position: relative;
                    h3,
                    h4 {
                        height: 15%;
                        width: 100%;
                        margin: 0;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        border-bottom: 1px solid #f1f1f1;
                    }
                    .statu {
                        text-decoration: none;
                        position: absolute;
                        left: -26px;
                        top: 14px;
                        transform: rotate(-45deg);
                        width: 100px;
                        height: 24px;
                        background-color: #ED9324;
                        color: white;
                        line-height: 24px;
                    }
                    .video {
                        width: 65%;
                        height: 25%;
                        box-shadow: 2px 2px 5px #888888;
                        border-radius: 5px;
                        margin: 0 auto;
                        position: relative;
                        background-position: center;
                        background-size: cover;
                        span {
                            display: block;
                            position: absolute;
                            right: 5px;
                            top: 100%;
                            transform: translateY(-35px);
                            background-color: rgba(255, 255, 255, 0.9);
                            box-shadow: 0px 0px 5px #888888;
                            width: 30px;
                            height: 30px;
                            line-height: 29px;
                            text-align: center;
                            font-size: 20px;
                            padding-left: 5px;
                            border-radius: 50%;
                            color: #8CD8EB;
                        }
                    }
                }
                .btn_ft {
                    padding: 6px 10px;
                    margin-top: 10px;
                    line-height: 1;
                    border-color: transparent;
                    &:active,
                    &:hover,
                    &:focus {
                        outline: none;
                        background-color: #F79B38;
                        color: white;
                    }
                }
            }
            .bottom {
                display: none;
            }
        }
        .teacher {
            width: 100%;
            background-color: #E7EFEF;
            .course_head {
                height: 20vh;
                padding-top: 60px;
            }
            .course_title {
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            .teacher_list {
                height: 78vh;
                position: relative;
                .img {
                    position: relative;
                    width: 100%;
                    margin: 0;
                    height: 35vh;
                    background-position: center;
                    background-size: cover;
                    .message {
                        height: 10vh;
                        width: 60%;
                        border-radius: 5px;
                        position: absolute;
                        left: 50%;
                        bottom: 0;
                        background-color: #55C2E1;
                        transform: translate(-50%, 50%);
                        text-align: center;
                        h3 {
                            margin: 5px 0;
                        }
                        span {
                            color: white;
                            letter-spacing: 2px;
                        }
                    }
                }
                .introduce {
                    height: 30vh;
                    padding: 8vh 10px 10px;
                    background-color: #fff;
                    text-indent: 26px;
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                }
            }
            .bottom {
                display: none;
            }
        }
        .about {
            background-color: #E5EFF0;
            padding-top: 50px;
            .aboutme {
                height: 35vh;
                display: flex;
                align-items: center;
                justify-content: space-around;
                .title {
                    display: flex;
                    align-items: center;
                    justify-content: space-around;
                }
                p {
                    padding-left: 15px;
                    text-indent: 28px;
                }
                ul {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    li {
                        width: 17vh;
                        border-radius: 50%;
                        overflow: hidden;
                        margin: 0 30px;
                        img {
                            width: 17vh;
                        }
                    }
                }
            }
            .wedo {
                height: 56vh;
                display: flex;
                align-items: center;
                justify-content: space-around;
                .content {
                    height: 40vh;
                    text-align: right;
                    padding-right: 20px;
                    display: flex;
                    flex-direction: column;
                    justify-content: space-around;
                    .right {
                        display: flex;
                        align-items: center;
                        justify-content: space-around;
                        p {
                            padding: 20px 30px;
                            text-indent: 28px;
                            text-align: left;
                        }
                    }
                }
                .btn_ft {
                    padding: 6px;
                    display: inline-block;
                    width: 110px;
                    text-align: center;
                    cursor: pointer;
                    margin-left: 30px;
                    &:active,
                    &:hover,
                    &:focus {
                        outline: none;
                        background-color: #F79B38;
                        color: white;
                    }
                }
            }
        }
        .location {
             background-color: #E5EFF0;
            .course_head {
                height: 25vh;
                padding-top: 60px;
                 display: flex;
                    align-items: center;
            }
            .col-sm-6 {
                height: 70vh;
            }
            .area_detail {
               
                display: flex;
                flex-direction: column;
                justify-content: space-around;
            }
            dl {
                padding-left: 30px;
                dt {
                    font-size: 20px;
                    padding: 10px 0;
                    border-bottom: 1px solid #999;
                }
                dd {
                    margin: 10px 0;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    font-size: 16px;
                    a {
                        display: inherit;
                        margin-left: 10px;
                        span {
                            color: orange;
                            margin-right: 5px;
                            margin-top: -2px;
                            transform: rotate(260deg)
                        }
                    }
                }
            }
        }
    }
    @media (max-width: 768px) {
        section {
            overflow: hidden;
            &.course {
                .container {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                }
                .course_head {
                    padding-top: 11vh;
                    width: 100%;
                    height: 27vh;
                    ul {
                        margin-top: 0;
                        margin-bottom: 5px;
                        display: flex;
                        align-items: center;
                        justify-content: space-around;
                        li {
                            text-align: center;
                            span {
                                display: block;
                                width: 40px;
                                height: 40px;
                                line-height: 40px;
                                text-align: center;
                                font-size: 28px;
                                border-radius: 50%;
                                background-color: #ED9324;
                                color: white;
                                margin-bottom: 15px;
                            }
                        }
                    }
                }
                .content {
                    height: 63vh;
                    display: flex;
                    flex-wrap: wrap;
                    align-content: space-around;
                    .list {
                        width: 45%;
                        height: 26vh;
                        text-align: center;
                        position: relative;
                        border-radius: 10px;
                        .statu {
                            text-decoration: none;
                            position: absolute;
                            left: 0;
                            top: 0;
                            width: 70px;
                            height: 24px;
                            background-color: #ED9324;
                            color: white;
                            line-height: 24px;
                            border-radius: 0 12px 12px 0;
                            padding-right: 8px;
                        }
                        &.math {
                            background-color: #79cae2;
                        }
                        &.phy {
                            background-color: #79cae2;
                        }
                        &.chem {
                            background-color: #79cae2;
                        }
                        h4 {
                            margin-top: 32px;
                        }
                        h3 {
                            margin-top: 10px;
                            margin-bottom: 0;
                            font-size: 20px;
                        }
                        p {
                            color: #ED9324;
                            .num {
                                font-size: 40px;
                                color: #fff;
                            }
                        }
                    }
                }
                .bottom {
                    height: 10vh;
                    display: flex;
                    width: 100%;
                    align-items: center;
                    justify-content: center;
                    .btn_ft {
                        width: 100%;
                        text-align: center;
                        border-radius: 10px;
                        line-height: 2;
                        border-color: transparent;
                        &:active,
                        &:hover,
                        &:focus {
                            outline: none;
                            background-color: #29C2E1;
                            color: white;
                        }
                    }
                }
            }
            &.teacher {
                .container {
                    text-align: center;
                    padding: 0;
                    .course_head {
                        height: 20vh;
                        padding-top: 40px;
                        text-align: left;
                        h2 {
                            font-size: 26px;
                            padding-left: 20px;
                            letter-spacing: 2px;
                        }
                    }
                    .teacher_list {
                        height: 70vh;
                        position: relative;
                        .img {
                            position: relative;
                            width: 100%;
                            margin: 0;
                            height: 35vh;
                            background-position: center;
                            background-size: cover;
                            .message {
                                height: 10vh;
                                width: 50%;
                                border-radius: 5px;
                                position: absolute;
                                left: 50%;
                                bottom: 0;
                                background-color: #55C2E1;
                                transform: translate(-50%, 50%);
                                text-align: center;
                                h3 {
                                    margin: 5px 0;
                                }
                                span {
                                    color: white;
                                    letter-spacing: 2px;
                                }
                            }
                        }
                        .introduce {
                            margin-top: 9vh;
                            padding: 0 10px;
                            text-indent: 26px;
                        }
                    }
                    .bottom {
                        height: 10vh;
                        display: flex;
                        width: 100%;
                        align-items: center;
                        justify-content: center;
                        padding: 0 15px;
                        .btn_ft {
                            text-align: center;
                            width: 100%;
                            border-radius: 10px;
                            line-height: 2;
                            border-color: transparent;
                            &:active,
                            &:hover,
                            &:focus {
                                outline: none;
                                background-color: #29C2E1;
                                color: white;
                            }
                        }
                    }
                }
            }
            &.about {
                background-color: #E5EFF0;
                .container {
                    width: 100%;
                    padding: 0;
                    h2 {
                        height: 16vh;
                        padding-top: 40px;
                        padding-left: 20px;
                        margin: 0;
                        letter-spacing: 2px;
                        font-size: 26px;
                        display: flex;
                        align-items: center;
                    }
                }
                .aboutme {
                    height: 30vh;
                    width: 100%;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: space-around;
                    .title {
                        display: flex;
                        align-items: center;
                        justify-content: space-around;
                        padding: 0 15px;
                        img {
                            width: 50px;
                        }
                    }
                    p {
                        padding-left: 15px;
                        text-indent: 28px;
                    }
                    ul {
                        display: flex;
                        align-items: center;
                        justify-content: space-around;
                        li {
                            width: 24%;
                            border-radius: 50%;
                            overflow: hidden;
                            img {
                                width: 100%;
                            }
                        }
                    }
                }
                .wedo {
                    width: 100%;
                    height: 54vh;
                    display: flex;
                    flex-direction: column-reverse;
                    align-items: center;
                    justify-content: space-around;
                    .activity {
                        height: 24vh;
                    }
                    .right {
                        display: flex;
                        align-items: center;
                        justify-content: space-around;
                        padding: 0 15px;
                        img {
                            width: 50px;
                        }
                    }
                }
            }
            &.location {
                background-color: #D3E3E3;
                .container {
                    width: 100%;
                    margin: 0;
                    padding: 0;
                }
                .course_head {
                    height: 16vh;
                    padding-top: 40px;
                    display: flex;
                    align-items: center;
                    h2 {
                        margin: 0;
                        padding-left: 20px;
                        font-size: 26px;
                    }
                }
                #allmap {
                    height: 32vh;
                    padding: 0;
                }
                .area_detail {
                    height: 50vh;
                    display: flex;
                    flex-direction: column;
                    justify-content: space-around;
                    dt {
                        margin: 5px 0;
                        font-weight: 500;
                    }
                    dd {
                        margin: 5px 0;
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                        font-size: 13px;
                        a {
                            display: inherit;
                            margin-left: 10px;
                            span {
                                color: orange;
                                margin-right: 5px;
                                margin-top: -2px;
                                transform: rotate(260deg)
                            }
                        }
                    }
                    .work_time {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                    }
                }
            }
        }
    }
}
