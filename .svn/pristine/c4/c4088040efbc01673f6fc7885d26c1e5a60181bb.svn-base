#user_center {
    @media (min-width: 769px) {
        margin-top: 100px;
        .user_info {
            width: 20%;
            height: 100%;
            float: left;
            .user_img {
                img {
                    max-width: 150px;
                    margin: 0 auto;
                }
                h3,
                h5 {
                    text-align: center;
                }
                .score {
                    display: none;
                }
            }
            .user_nav {
                margin-top: 15px;
                padding-left: 15px;
                font-size: 16px;
                li{
                    margin: 10px;
                    margin-top: -1px;
                   background-color: #f2f2f2;
                    padding: 10px;
                    &:hover{
                        border-color: red;

                    }
                    span{
                        display: inline-block;
                        padding-right: 15px;
                        border-right: 2px solid #4FC5DF;
                        margin-right: 10px;
                    }
                }
            }
        }
        .exam{
            margin-left: 20%;
        }
        .user_score{
            margin-left: 20%;
        }
    }
    @media (max-width: 768px) {
        margin-top: 50px;
        .user_info {
            margin: 0 -15px;
            overflow: hidden;
            position: relative;
            .user_img {
                background-color: #8B6484;
                padding: 25px 10px;
                img {
                    float: left;
                    width: 70px;
                }
                h3,
                h5 {
                    padding-left: 85px;
                    margin-top: 10px;
                    color: white;
                }
                h3 {
                    letter-spacing: 3px;
                }
                h5 {
                    margin-bottom: 0;
                }
            }
            .score {
                width: 100px;
                border-radius: 30px 0 0 30px;
                position: absolute;
                right: -20px;
                top: 60px;
                background-color: #ED9324;
                height: 30px;
                line-height: 30px;
                padding-left: 20px;
                color: white;
                margin-top: -15px;
                .num {
                    font-size: 20px;
                    margin-right: 5px;
                }
            }
        }
        .user_nav {
            margin-top: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid #333;
            display: flex;
            justify-content: center;
            li {
                flex-grow: 1;
                text-align: center;
                a {
                    display: inline-block;
                    span {
                        font-size: 30px;
                        display: block;
                        margin: 5px;
                    }
                }
            }
        }
        .user_score {
            margin: 0 -15px;
            h4 {
                border-bottom: 1px solid #e1e1e1;
                padding-bottom: 10px;
                padding-left: 15px;
            }
            .content {
                width: 100%;
                text-align: center;
                select {
                    margin: 0 auto;
                    height: 35px;
                    line-height: 35px;
                    background-color: #54C3E1;
                    color: white;
                    font-size: 16px;
                    letter-spacing: 2px;
                }
            }
            .result {
                background-color: #F7F7F7;
                padding: 10px;
                margin-top: 10px;
                .user_result {
                    width: 70%;
                    span,
                    h4 {
                        color: #ED9324;
                        border: none;
                        padding: 0;
                    }
                }
            }
        }
    }
}
