#homepage {
  width: 100%;
  position: relative;
  -webkit-transition: 1s cubic-bezier(0.86, 0, 0.07, 1);
  transition: 1s cubic-bezier(0.86, 0, 0.07, 1);
}
#homepage section {
  position: relative;
  width: 100%;
  height: 100%;
}
#homepage section:nth-child(2),
#homepage section:nth-child(4) {
  background: #E7EEF1;
}
#homepage section .fp-tableCell {
  height: 100%;
}
#homepage section footer {
  position: absolute;
  bottom: 0;
}
#homepage section .course_head {
  width: 100%;
  margin-bottom: 50px;
}
#homepage section .pull-left h2 {
  font-size: 30px;
  font-weight: 800;
}
#homepage section .pull-left p {
  font-size: 22px;
}
#homepage section .aboutme h2,
#homepage section .wedo h2 {
  font-size: 30px;
  font-weight: 800;
  margin-bottom: 30px;
}
#homepage section .aboutme p,
#homepage section .wedo p {
  margin-bottom: 25px;
}
#homepage .swiper-container {
  width: 100%;
  height: 100%;
}
#homepage .swiper-container .swiper-slide {
  background-position: center;
  background-size: cover;
}
#homepage .swiper-container .swiper-slide .btn_ft {
  z-index: 999;
  height: 30px;
  border-radius: 15px;
  background-color: #29C2E1;
  color: white;
  position: absolute;
  left: 50%;
  top: 83%;
  padding: 5px 10px;
  -webkit-transform: translate(-50%);
  -ms-transform: translate(-50%);
  transform: translate(-50%);
}
#homepage .swiper-container .swiper-pagination {
  position: absolute;
  bottom: 30px;
  width: 100%;
  text-align: center;
  z-index: 9;
}
#homepage .swiper-container .swiper-pagination span {
  margin: 15px;
}
#homepage .course .num {
  margin: 0 10px;
  font-size: 50px;
  font-family: ftFont;
  color: #F7941D;
}
#homepage .course .content {
  overflow: hidden;
}
#homepage .course .content .list {
  text-align: center;
  background-color: white;
  overflow: hidden;
  margin: 0;
}
#homepage .course .content .list .head {
  overflow: hidden;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  height: 120px;
  border-bottom: 1px solid #EEF3F4;
}
#homepage .course .content .list .head span {
  position: absolute;
  height: 30px;
  line-height: 30px;
  top: 12px;
  left: -35px;
  width: 120px;
  -webkit-transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  transform: rotate(-45deg);
  background-color: #E20000;
  color: white;
}
#homepage .course .content .list .head h4 {
  width: 100%;
  height: 65px;
  text-align: center;
  font-weight: 800;
  font-size: 20px;
  border-bottom: 1px solid #EEF3F4;
  margin: 0;
  padding: 30px 0;
}
#homepage .course .content .list .head .line {
  width: 110px;
  position: absolute;
  left: 50%;
  top: 64px;
  margin-left: -55px;
  height: 1px;
  background-color: red;
}
#homepage .course .content .list .head p {
  text-align: center;
  font-size: 24px;
  font-family: Tahoma;
  letter-spacing: 2px;
  color: black;
  margin: 10px 0 0 0;
}
#homepage .course .content .list .message {
  margin-top: 140px;
}
#homepage .course .content .list .message .time {
  margin-bottom: 26px;
  font-size: 12px;
}
#homepage .course .content .list .message .video {
  width: 90%;
  height: 110px;
  margin: 0 auto;
  border-radius: 5px;
  border: 1px solid #eee;
  box-shadow: 1px 1px 1px #888888;
  position: relative;
}
#homepage .course .content .list .message .video .blue {
  margin-top: 35px;
  color: #005896;
  font-weight: 700;
}
#homepage .course .content .list .message .video .black {
  color: black;
  font-weight: 700;
  margin-top: 5px;
}
#homepage .course .content .list .message .video span {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  color: #29C2E1;
  font-size: 30px;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  padding-top: 8px;
  padding-left: 6px;
  border: 1px solid #eee;
  background-color: rgba(250, 250, 250, 0.2);
  box-shadow: 0px 0px 20px #B9B9B9;
}
#homepage .course .content .list .message .video span:before {
  opacity: 0.6;
}
#homepage .course .content .list a {
  padding: 10px;
  display: block;
  width: 120px;
  line-height: 1;
  margin: 15px auto;
  cursor: pointer;
}
#homepage .teacher {
  width: 100%;
}
#homepage .teacher .teacher_list {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-around;
  -ms-flex-pack: distribute;
  justify-content: space-around;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}
#homepage .teacher .teacher_list .thumbnail {
  margin: 0 10px;
}
#homepage .aboutme {
  height: 200px;
}
#homepage .aboutme h2 {
  padding-bottom: 30px;
}
#homepage .aboutme p {
  padding-left: 50px;
}
#homepage .aboutme .col-sm-5 {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-around;
  -ms-flex-pack: distribute;
  justify-content: space-around;
}
#homepage .aboutme .col-sm-5 img {
  display: block;
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
#homepage .wedo .btn_ft {
  padding: 6px;
  display: inline-block;
  width: 120px;
  text-align: center;
  cursor: pointer;
}
#homepage .location dl {
  padding-left: 30px;
}
#homepage .location dl dt {
  font-size: 26px;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid #333;
}
#homepage .location dl dd {
  margin-top: 12px;
}
#homepage .location dl dd p {
  margin-bottom: 20px;
}
@media (max-width: 768px) {
  #homepage section.course {
    padding: 40px 0;
  }
  #homepage section.course .course_head {
    margin-bottom: 0;
  }
  #homepage section.course .content .list .head {
    height: 75px;
  }
  #homepage section.course .content .list .head h4 {
    height: 38px;
    padding: 10px 0;
  }
  #homepage section.course .content .list .head .line {
    top: 38px;
  }
  #homepage section.course .content .list .head p {
    margin: 0;
  }
  #homepage section.course .content .list .message {
    margin-top: 85px;
  }
  #homepage section.course .content .list .message .time {
    margin-bottom: 10px;
  }
  #homepage section.course .content .list .num {
    font-size: 42px;
  }
  #homepage section.course .content .list .btn_ft {
    line-height: .9;
  }
  #homepage section.teacher {
    padding-top: 40px;
  }
  #homepage section.teacher .thumbnail {
    width: 50%;
  }
  #homepage section.teacher .thumbnail img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
  }
  #homepage section.teacher .thumbnail h3 {
    font-size: 20px;
  }
}
