#homepage {
    width: 100%;
    .fp-tableCell {
        /* height: calc( 100vh - 40px)!important; */
        display: flex;
        .container {
            height: 100%;
        }
    }
    .swiper-container {
        width: 100%;
        height: 100%;
        .swiper-slide {
            background-position: center;
            background-size: cover;
        }
        .swiper-pagination {
            position: absolute;
            bottom: 20px;
            width: 100%;
            text-align: center;
            z-index: 9;
            span {
                margin: 20px;
            }
        }
    }
    .course {
        .num {
            margin: 0 10px;
            font-size: 50px;
            font-family: ftFont;
            color: #F7941D;
        }
        .course_head {
            ul {
                margin-top: 30px;
                display: flex;
                align-items: center;
                justify-content: space-around;
                li {
                    text-align: center;
                    span {
                        display: block;
                        width: 80px;
                        height: 80px;
                        line-height: 80px;
                        text-align: center;
                        font-size: 50px;
                        border-radius: 50%;
                        background-color: #ED9324;
                        color: white;
                        margin-bottom: 25px;
                    }
                }
            }
        }
        .content {
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: space-around;
            .list {
                text-align: center;
                background-color: white;
                overflow: hidden;
                margin: 0;
                .statu {
                    &.hot {
                        background-color: #ED9324;
                    }
                    &.danger {
                        background-color: #E20000;
                    }
                    &.full {
                        background-color: #919494;
                    }
                }
            }
        }
    }
    .teacher {
        .container {
            overflow: hidden;
        }
    }
    @media (min-width: 769px) {
        .course {
            background-color: #E7EFEF;
            .course_head {
                height: 35%;
                margin-top: 60px;
                .course_title {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                }
            }
            .content {
                height: 45%;
                display: flex;
                flex-wrap: wrap;
                align-content: space-between;
                .list {
                    height: 100%;
                    width: 25%;
                    margin-bottom: 10px;
                    text-align: center;
                    position: relative;
                    h3,
                    h4 {
                        height: 15%;
                        width: 100%;
                        margin: 0;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        border-bottom: 1px solid #f1f1f1;
                    }
                    .statu {
                        text-decoration: none;
                        position: absolute;
                        left: -26px;
                        top: 14px;
                        transform: rotate(-45deg);
                        width: 100px;
                        height: 24px;
                        background-color: #ED9324;
                        color: white;
                        line-height: 24px;
                    }
                    .video {
                        width: 65%;
                        height: 25%;
                        box-shadow: 2px 2px 5px #888888;
                        border-radius: 5px;
                        margin: 0 auto;
                        position: relative;
                        background-position: center;
                        background-size: cover;
                        span {
                            display: block;
                            position: absolute;
                            right: 5px;
                            top: 100%;
                            transform: translateY(-35px);
                            background-color: rgba(255, 255, 255, 0.9);
                            box-shadow: 0px 0px 5px #888888;
                            width: 30px;
                            height: 30px;
                            line-height: 29px;
                            text-align: center;
                            font-size: 20px;
                            padding-left: 5px;
                            border-radius: 50%;
                            color: #8CD8EB;
                        }
                    }
                }
                .btn_ft {
                    line-height: 1;
                    border-color: transparent;
                    &:active,
                    &:hover,
                    &:focus {
                        outline: none;
                    }
                }
            }
        }
        .teacher {
            width: 100%;
            .course_head {
                height: 20%;
                margin-top: 60px;
            }
            .course_title {
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            .teacher_list {
                margin-top: 20px;
                display: flex;
                justify-content: space-around;
                align-items: center;
                .img {
                    width: 100%;
                    margin: 0;
                    height: 35vh;
                    background-position: center;
                    background-size: cover;
                }
            }
        }
        .aboutme {
            height: 200px;
            h2 {
                padding-bottom: 30px;
            }
            p {
                padding-left: 50px;
            }
            .col-sm-5 {
                display: flex;
                justify-content: space-around;
                img {
                    display: block;
                    width: 100px;
                    height: 100px;
                    border-radius: 50%;
                }
            }
        }
        .wedo {
            .btn_ft {
                padding: 6px;
                display: inline-block;
                width: 120px;
                text-align: center;
                cursor: pointer;
            }
        }
        .location {
            dl {
                padding-left: 30px;
                dt {
                    font-size: 26px;
                    margin-bottom: 20px;
                    padding-bottom: 15px;
                    border-bottom: 1px solid #333;
                }
                dd {
                    margin-top: 12px;
                    p {
                        margin-bottom: 20px;
                    }
                }
            }
        }
    }
    @media (max-width: 768px) {
        section {
            overflow: hidden;
            &.swiper-container {}
            &.course {
                .container {
                    padding-top: 40px;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: space-between;
                }
                .course_head {
                    width: 100%;
                    ul {
                        margin-top: 10px;
                        margin-bottom: 5px;
                        display: flex;
                        align-items: center;
                        justify-content: space-around;
                        li {
                            text-align: center;
                            span {
                                display: block;
                                width: 40px;
                                height: 40px;
                                line-height: 40px;
                                text-align: center;
                                font-size: 28px;
                                border-radius: 50%;
                                background-color: #ED9324;
                                color: white;
                                margin-bottom: 15px;
                            }
                        }
                    }
                }
                .content {
                    display: flex;
                    flex-wrap: wrap;
                    align-content: space-between;
                    .list {
                        width: 45%;
                        margin-bottom: 5%;
                        text-align: center;
                        position: relative;
                        border-radius: 10px;
                        .statu {
                            text-decoration: none;
                            position: absolute;
                            left: 0;
                            top: 0;
                            width: 70px;
                            height: 24px;
                            background-color: #ED9324;
                            color: white;
                            line-height: 24px;
                            border-radius: 0 12px 12px 0;
                            padding-right: 8px;
                        }
                        &.math {
                            background-color: #CFCDED;
                        }
                        &.phy {
                            background-color: #BBE9F3;
                        }
                        &.chem {
                            background-color: #F1D9B3;
                        }
                        h4 {
                            margin-top: 32px;
                        }
                        h3 {
                            margin-top: 10px;
                            font-size: 20px;
                        }
                        p {
                            color: #ED9324;
                            .num {
                                font-size: 40px;
                                color: #fff;
                            }
                        }
                    }
                }
                .btn_ft {
                    line-height: 1;
                    border-color: transparent;
                    &:active,
                    &:hover,
                    &:focus {
                        outline: none;
                    }
                }
            }
            &.teacher {
                .container {
                    padding: 0;
                    .course_head{
                        height: 20vh;
                        padding-top: 40px;

                    }
                    .teacher_list{
                        height: 65vh;
                        position: relative;
                        .message{
                            height: 10vh;
                            width: 50%;
                            border-radius: 5px;
                            position: absolute;
                            left: 50%;
                            top: 48%;
                            background-color: #55C2E1;
                            transform:translate(-50%,0);text-align: center;
                            h3{
                                margin:5px 0;
                            }
                            span{
                                color: white;
                                letter-spacing:2px;
                            }

                        }
                        .introduce{
                            margin-top: 50px;
                            padding: 10px;
                            text-indent: 26px;
                        }
                        
                    }
                }
                .img {
                    width: 100%;
                    margin: 0;
                    height: 35vh;
                    background-position: center;
                    background-size: cover;
                }
            }
            &.about {}
            &.location {
                .container {
                    width: 100%;
                    margin: 0;
                    padding: 40px 0 0 0;
                }
                #allmap {
                    height: 200px;
                    padding: 0;
                }
            }
        }
    }
}
